# dotenvy - VS Code Environment Manager Example File
# Copy this file to .env and customize the values for your project

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp
DB_USER=myuser
DB_PASSWORD=mypassword

# API Keys and Secrets
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Service Endpoints
API_BASE_URL=http://localhost:3000
REDIS_URL=redis://localhost:6379
MQTT_BROKER_URL=ws://localhost:1883

# Environment Specific
NODE_ENV=development
DEBUG=true
PORT=3000

# Third-party Services
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
SENDGRID_API_KEY=SG.xxx
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Cloud Services (for dotenvy cloud sync)
DOPPLER_PROJECT=your-project-name
DOPPLER_CONFIG=development
DOPPLER_TOKEN=dp.st.xxxx

# Optional: Create additional .env.* files for different environments
# Example: .env.production, .env.staging, etc.
